@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
}



<div class="container">
    <div class="row p-3 mt-3">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus"></i> &nbsp Create New Category
            </a>
        </div>
    </div>
    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>
                    Category Name
                </th>
                <th>
                    Display Order
                </th>
                <th></th>
            </tr>
        </thead>
        <tobdy>
            @foreach(var category in Model)
            {
                <tr>
                    <td>
                        @category.Name
                    </td>
                    <td>
                        @category.DisplayOrder
                    </td>
                    <td>
                        <a asp-controller="Category" asp-action="Edit" asp-route-Id="@category.Id" class="w-50 btn btn-primary">
                             <i class="bi bi-pen"></i> &nbsp; Edit
                        </a>
                    </td>

                    <td>
                        <a asp-controller="Category" asp-action="Delete" asp-route-Id="@category.Id" class="w-50 btn btn-danger">
                            <i class="bi bi-eraser"></i> &nbsp; Delete
                        </a>
                    </td>

                </tr>
            }
        </tobdy>
    </table>
</div>



