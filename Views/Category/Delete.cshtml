@model Category

<form method="post" asp-action="DeleteCategory">
    <input asp-for="Id" hidden />
    <div class="p-3 mt-3">
        <div class="row">
            <h2 class="text-primary mb-3">Delete Category</h2>
        </div>
        <div>
            <label asp-for="Name"></label>
            <input asp-for="Name" disabled class="form-control" />
        </div>

        <div class="mt-3">
            <label asp-for="DisplayOrder"></label>
            <input asp-for="DisplayOrder" disabled class="form-control" />

        </div>

        <button type="submit" class="btn btn-danger mt-3" style="width:100px">Delete</button>
    </div>
</form>


@*Client side validation*@
@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}


